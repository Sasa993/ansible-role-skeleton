---
# role: {{ role_name }}
# file: molecule/default/molecule.yml

dependency:
  name: galaxy
  options:
    role-file: requirements.yml
driver:
  name: docker
lint: |
  set -e
  yamllint .
  ansible-lint
platforms:
  - name: {{ role_name | replace('ansible-role-', '') }}-alpine
    image: "jam82/molecule-alpine:latest"
    command: ""
    pre_build_image: true
    privileged: true
    tmpfs:
      - /tmp
      - /run
  - name: {{ role_name | replace('ansible-role-', '') }}-amazonlinux
    image: "jam82/molecule-amazonlinux:latest"
    command: ""
    pre_build_image: true
    privileged: true
    tmpfs:
      - /tmp
      - /run
    volumes:
      - "/sys/fs/cgroup:/sys/fs/cgroup:ro"
  - name: {{ role_name | replace('ansible-role-', '') }}-arch
    image: "jam82/molecule-archlinux:latest"
    command: ""
