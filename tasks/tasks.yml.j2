---
# role: {{ role_name }}
# file: tasks/tasks.yml
{% raw %}
- name: Set os_family dependent variables
  include_vars: '{{ ansible_os_family }}.yml'

- name: Set distribution dependent variables
  include_vars: '{{ vars_file }}'
  with_first_found:
    - files:
        - '{{ ansible_distribution }}-{{ ansible_distribution_major_version }}.yml'
        - '{{ ansible_distribution }}.yml'
        - '{{ ansible_os_family }}-{{ ansible_distribution_major_version }}.yml'
      skip: true
  loop_control:
    loop_var: vars_file

- name: Install packages for {% endraw %}{{ role_name }}{% raw %}
  package:
    name: "{{ {% endraw %}{{ role_name | replace('ansible-role-', '') | replace('-','_') }}{% raw %}_package }}"
    state: present
  loop: "{{ {% endraw %}{{ role_name | replace('ansible-role-', '') | replace('-','_') }}{% raw %}_packages }}"
  loop_control:
    loop_var: {% endraw %}{{ role_name | replace('ansible-role-', '') | replace('-','_') }}{% raw %}_package
{% endraw %}