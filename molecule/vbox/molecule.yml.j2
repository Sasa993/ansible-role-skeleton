---
# role: {{ role_name }}
# file: molecule/vbox/molecule.yml

dependency:
  name: galaxy
driver:
  name: vagrant
  provider:
    name: virtualbox
    type: virtualbox
lint:
  name: yamllint
  options:
    config-file: molecule/shared/yamllint.yml
platforms:
  - name: {{ role_name | replace('ansible-role-', '') | replace('-','_') }}-arch
    box: "archlinux/archlinux"
    cpus: 2
    memory: 1024
  - name: {{ role_name | replace('ansible-role-', '') | replace('-','_') }}-centos8
    box: "centos/8"
    cpus: 2
    memory: 1024
  - name: {{ role_name | replace('ansible-role-', '') | replace('-','_') }}-debian10
    box: "debian/buster64"
    cpus: 2
    memory: 1024
  - name: {{ role_name | replace('ansible-role-', '') | replace('-','_') }}-ubuntu1804
    box: "ubuntu/bionic64"
    cpus: 2
    memory: 1024
provisioner:
  name: ansible
  log: True
  lint:
    name: ansible-lint
  playbooks:
    prepare: prepare.yml
    converge: ../shared/playbook.yml
  inventory:
    group_vars:
      all:
        {{ role_name | replace('ansible-role-', '') | replace('-','_') }}_enabled: True
scenario:
  name: vbox
verifier:
  name: testinfra
  env:
    PYTHONWARNINGS: "ignore"
  directory: ../tests
  options:
    v: True
    sudo: True
  lint:
    name: flake8
{{ blank_line }}